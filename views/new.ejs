    <script type="text/javascript">
		var table = $("#checkoutTable");
		table.find("tbody tr").remove();
		var reservedSeats = <%- JSON.stringify(reservation.seats) %>;
		var seatsArray = [];
		var runningTotal = 250 * reservedSeats.length;

		if(reservedSeats.length > 0) {
			for(var i = 0; i < reservedSeats.length; i++) {
				$("#" + reservedSeats[i]).attr("disabled", "true");
				$("#" + reservedSeats[i]).css("background-color", "rgb(61,63,64)");
				$("#" + reservedSeats[i]).css("border-color", "rgba(61,63,64)");
				$("#" + reservedSeats[i]).css("color","white");
				$("#" + reservedSeats[i]).css("opacity","100");
			}
		}

		$(".btn-success").on("click", function() {
			var newSeat = $(this).attr("id");
			seatsArray.push(newSeat);
			$(this).attr("disabled", "true");
			$(this).css("background-color", "rgb(61,63,64)");
			$(this).css("border-color", "rgba(61,63,64)");
			$(this).css("color","white");
			$(this).css("opacity","100");

			table.append("<tr><td>" + newSeat + "</td><td>Php 250</td></tr>")
			runningTotal = 250 * reservedSeats.length;
			$("#total").text(runningTotal);

			document.getElementById("selectedSeats").value = seatsArray;
			document.getElementById("selectedSeats").text = seatsArray;
		});
    </script>
